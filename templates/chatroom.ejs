<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Room</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/chatroom.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-4">Chat Room</h1>
        <h2 class="mt-4">Your Conversations</h2>
        <% if (tasks.length > 0) { %>
            <div class="list-group">
                <% tasks.forEach(task => { %>
                    <a href="/chat/<%= task._id %>" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1"><%= task.title %></h5>
                            <small>Posted by: <%= task.taskOwner %></small>
                        </div>
                        <p class="mb-1"><%= task.description %></p>
                        <small>Deadline: <%= task.deadline %></small>
                    </a>
                <% }); %>
            </div>
        <% } else { %>
            <p>No tasks found.</p>
        <% } %>

        <h2 class="mt-4">Messages</h2>
        <% if (messages.length > 0) { %>
            <ul class="list-group">
                <% messages.forEach(message => { %>
                    <li class="list-group-item">
                        <div>
                            <strong>From: <%= message.sender %></strong>
                            <p><%= message.message %></p>
                            <small><%= new Date(message.dateTime).toLocaleString() %></small>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No messages found.</p>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
